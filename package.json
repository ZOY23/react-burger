{
  "name": "react-burger",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.7.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@ya.praktikum/react-developer-burger-ui-components": "^1.14.2",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "react-scripts": "5.0.1",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "typescript": "^4.9.5",
    "uuid": "^11.1.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome --config pageLoadTimeout=60000,defaultCommandTimeout=10000",
    "test:e2e": "start-server-and-test 'npm start' 'http-get://localhost:3000' 'npm run cy:run'",
    "test:e2e:dev": "start-server-and-test 'npm start' 'http-get://localhost:3000' 'npm run cy:open'",
    "cy:verify": "cypress verify",
    "cy:cache:clear": "cypress cache clear"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.cy.{js,jsx,ts,tsx}"
        ],
        "extends": [
          "plugin:cypress/recommended"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.3",
    "@types/cypress": "^1.1.6",
    "@types/prop-types": "^15.7.14",
    "@types/uuid": "^10.0.0",
    "cypress": "^14.5.1",
    "cypress-real-events": "^1.14.0",
    "cypress-wait-until": "^3.0.2",
    "eslint-plugin-cypress": "^2.13.2",
    "prop-types": "^15.8.1",
    "start-server-and-test": "^2.0.12"
  }
}
